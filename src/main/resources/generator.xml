<?xml version="1.0" encoding="UTF-8" ?>

<generator xmlns="http://www.w3school.com.cn">

    <context outRootPath="src/main/java"
             parentPackage="com.test.demo"
             overwriteFile="true"
             author="TOM">


        <tables namePatterns=".*">

            <nameConverter class="com.utils.converter.CamelNameConverter">
                <property name="toCamel" value="true"/>
                <property name="tablePrefix" value="sys_"/>
            </nameConverter>

            <dataSource url="jdbc:mysql://127.0.0.1:3306/purchase_sale_system?serverTimezone=CST&amp;useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false"
                        user="root" password="root"/>
        </tables>

        <templates>
            <template name="entity">
                <property name="lombok" value="true"/>
            </template>
<!--            <template name="dao"/>-->
<!--            <template name="service"/>-->
<!--            <template name="serviceImpl"/>-->
<!--            <template name="controller"/>-->
        </templates>

        <typeMappings>
            <typeMapping dbType="int" javaType="java.lang.Integer"/>
            <typeMapping dbType="bigint" javaType="java.lang.String"/>
        </typeMappings>

    </context>
</generator>